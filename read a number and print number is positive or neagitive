read a number and print number is positive or neagitive
#include <stdio.h>

int main()
{
   int a;
   scanf("%d",&a);
   if(a>0)
   {
       printf("+ve number");
   }
   else
   if(a<0)
   {
       printf("-ve number");
   }
     else
     {
         printf("It is a zero");
     }
     
       
     
       
 
       
       
   
   

    
   
    return 0;
}

   

Read a number and print sum of odd digits and sum of even digits
#include <stdio.h>
#include<math.h>

int main()
{
    int n=1,s1=0,s2=0;
    scanf("%d",&n);
    while(n>0)
    {
        d=n%10;
        d=n/10;
        
    {
        
        if(d%2==0)
          s1=s1+d;
        else
          s2=s2+d;
}
        printf("%d",s1,s2);
    }
        
    

    


    return 0;
}

int main() {
7int i,j,n;
    scanf("%d",&n);
for(i = 0; i < n; i++) 
{
        for(j = 0; j < n - i - 1; j++)
        {
            printf(" ");
        }
        for(j = 0; j <= i; j++) {
            printf("* ");
        }
        printf("\n");
}

            
    
    return 0;
}

